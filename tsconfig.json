{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": true,
    "target": "es6",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@Components": [
        "src/components/index"
      ],
      "@Assets": [
        "assets/index"
      ],
      "@Theme": [
        "src/theme/theme"
      ],
      "@Stores":[
        "src/redux/store"
      ],
      "@Hooks":[
        "src/redux/hooks/hooks"
      ],
      "@Slices":[
        "src/redux/slices/dataSlice"
      ],
      "@Auth":[
        "src/services/auth/index"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
